// O programa deve receber a entrada de um número e verifica se é igual ou não aos números 0, 1 e 2. 
// Caso seja diferente, imprime: “O valor não é igual a 0, 1 e 2”.

let numero, igual0, igual1, igual2
numero = parseInt(window.prompt("Digite um número de 0 a 2"))

igual0 = 0
igual1 = 1
igual2 = 2

if (numero === 0) {
console.log(`Número é igual a ${igual0}`)
}
else if 
(numero === 1) {
console.log(`Número é igual a ${igual1}`)
}
else if 
(numero ===2) {
console.log(`Número é igual a ${igual2}`)
}
else {
console.log("O valor não é igual a 0, 1 ou 2.")
}
